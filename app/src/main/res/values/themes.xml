<resources>
    <!-- Base application theme. -->
    <style name="Theme.Flow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_orange</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Other colors. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColor">@color/white</item>

        <!--  Toolbar Style -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

        <!--  TextInputLayout Style -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <!--  CardView Style -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="cardViewStyle">@style/Widget.App.CardView</item>

        <!--  BottomSheet Style -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <!--Floating label text style-->
    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/amber</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/amber_orange</item>
        <item name="colorControlActivated">@color/amber</item>
    </style>


    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/yellow_primary</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.App.ToolbarTitle</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.ToolbarTitle</item>
        <item name="navigationIconTint">@color/yellow_primary</item>
    </style>

    <style name="Theme.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlHighlight">@color/toolbarActionAccent</item>
    </style>


    <!--  TextInputEditText Style -->

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="startIconTint">@color/yellow_primary</item>
        <item name="endIconTint">@color/grey</item>
        <item name="boxStrokeColor">@null</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_text_corner_radius</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!--  CardView Style -->

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="cardForegroundColor">@color/card_foreground_color</item>
    </style>

    <!--  BottomSheet Style -->

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Widget.MyApp.CardShape</item>
    </style>

    <style name="Widget.MyApp.CardShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.MyApp.LoadingErrorView" parent="">
        <item name="android:elevation">@dimen/loading_error_view_elevation</item>
        <item name="iconSize">@dimen/loading_error_view_icon_size</item>
        <item name="iconError">@drawable/ic_error</item>
        <item name="iconEmpty">@drawable/ic_empty</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/loading_error_background</item>
    </style>
</resources>